<div class="body-contents">
    <div class="topNav">
        <a class ="navButton" href="/projectboards">Manage Projects</a>
        <a class ="navButton" href="/taskHistory">Task History</a>
    </div>
    <div class="wrapper">
    <div class="header">Users</div>
    <div class="contents">
    
        {{#each users}}
        <a href="/manageUsers/{{this.id}}">
        <section class="userCard">
        <div class="userCardDetails">
            <div class="user-name">{{this.name}}</div>
            <div class="user-image" style="background-image: url({{this.image}});"></div>
        </div>
        </section>
        </a>
        {{/each}}
    <section class="userCard">
        <div> New User</div>
        <form action='/addManageUser' method="POST">
            <label> Name</label>
            <input name="name" type="text" placeholder="Name" required> <br>
            <label> Select Avatar: </label>
            <select name="image">
                <option value="/image/avatar1.jpeg" selected>Avatar1</option>
                <option value="/image/avatar2.jpeg">Avatar2</option>
                <option value="/image/female1.jpeg">Female1</option>
                <option value="/image/female2.jpg">Female2</option>
                <option value="/image/female3.jpg">Female3</option>
                <option value="/image/ghost1.png">Ghost</option>
                <option value="/image/male1.jpg">Male1</option>
                <option value="/image/male2.jpg">Male2</option>
                <option value="/image/male3.jpeg">Male3</option>
                <option value="/image/superman1.jpeg">Superman</option>
                <option value="/image/surprise.png">Surprise Me!</option>
            </select>
            <button style= "submitButton" type="submit"> Add </button>
        </form>
    </section>
  </div>
 </div>
</div>

